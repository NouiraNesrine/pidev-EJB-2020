<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>UserManager-web</display-name>
	<welcome-file-list>
		<welcome-file>loggin.xhtml</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>login.LoginBean</filter-class>
	</filter>
	<!-- Set the login filter to secure all the pages in the /secured/* path 
		of the application -->
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/EmployeSpace/*</url-pattern>
		<url-pattern>/ManagerSpace/*</url-pattern>
		<url-pattern>/RhSpace/*</url-pattern>
	</filter-mapping>
	<context-param>
		<param-name>primefaces.FONT_AWESOME</param-name>
		<param-value>true</param-value>
	</context-param>

</web-app>